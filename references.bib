}

@Article{Philip2020,
  author    = {Philip, Jobin T. and George, S. Thomas},
  journal   = {Clin. EEG Neurosci.},
  title     = {Visual {P300} {Mind}-{Speller} {Brain}-{Computer} {Interfaces}: {A} {Walk} {Through} the {Recent} {Developments} {With} {Special} {Focus} on {Classification} {Algorithms}},
