  shorttitle = {Increased {Intra}-{Participant} {Variability} in {Children} with {Autistic} {Spectrum} {Disorders}},
  url        = {https://www.frontiersin.org/articles/10.3389/fpsyg.2011.00051},
  urldate    = {2022-09-13},
}

@Article{Poli2010,
  author     = {Poli, Riccardo and Cinel, Caterina and Citi, Luca and Sepulveda, Francisco},
  journal    = {Psychophysiology},
  title      = {Reaction-time binning: {A} simple method for increasing the resolving power of {ERP} averages},
  year       = {2010},
