  doi          = {10.1007/s10618-018-0596-4},
  fjournal     = {Data Mining and Knowledge Discovery},
  groups       = {Covert alignment},
  journaltitle = {Data Min. Knowl. Disc.},
  keywords     = {Time series, Classification, Distance based, Kernel, Definiteness},
