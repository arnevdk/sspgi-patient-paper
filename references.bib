@InProceedings{Paek2020,
  author    = {Paek, Andrew Y. and Kilicarslan, Atilla and Korenko, Branislav and Gerginov, Vladislav and Knappe, Svenja and Contreras-Vidal, Jose L.},
  booktitle = {2020 42nd {Annual} {International} {Conference} of the {IEEE} {Engineering} in {Medicine} {Biology} {Society} ({EMBC})},
