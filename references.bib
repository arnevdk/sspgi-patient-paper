  keywords  = {Color, Visualization, Accuracy, Image color analysis, Calibration, Neuroscience, Semiconductor optical amplifiers},
}

@Article{Zhang2010,
  author    = {Zhang, Dan and Maye, Alexander and Gao, Xiaorong and Hong, Bo and Engel, Andreas K. and Gao, Shangkai},
  journal   = {J. Neural Eng.},
  title     = {An independent brain–computer interface using covert non-spatial visual selective attention},
