@Article{Pfefferbaum1980,
  author     = {Pfefferbaum, Adolf and Ford, Judith M and Roth, Walton T and Kopell, Bert S},
  journal    = {Electroencephalogr. Clin. Neurophysiol.},
  title      = {Age differences in {P3}-reaction time associations},
  year       = {1980},
  issn       = {0013-4694},
  month      = aug,
  number     = {3},
  pages      = {257--265},
  volume     = {49},
  abstract   = {Eight healthy old and 12 healthy young women had event-related potentials (ERPs) recorded during the performance of a memory retrieval task. For each subject the single trial data recorded at Pz were analyzed using Woody's adaptive filter technique. The old subjects differed from the young in several respects: P3 amplitude at Pz was smaller, P3 latency and reaction time (RT) were greater, the relationship between P3 latency and RT was considerably altered. The adaptive filter increased the amplitude of P3 but the age-related amplitude difference persisted, suggesting that this difference is not due to increased latency variability with age. The old subjects had lower single trial P3-RT correlations and longer elapsed time from P3 peak to the response than did the young subjects. Both groups had greater RTs for outset items (‘negative’ responses) than for inset items (‘positive’ responses). For the young subjects P3 latency was also greater for the outset compared to the inset items but this difference was not found for the old subjects. Thus, the relationship between P3 latency and RT is altered in the aged — P3 and RT are less tightly coupled than in the young.
