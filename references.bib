  fjournal   = {Journal of Neuroscience Methods},
  groups     = {Multi-component, Original alignment paper},
  keywords   = {Event-related potentials, Evoked potentials, Stimulus-lock, Response-lock, Stimulus component, Response component, Fourier transform},
  language   = {en},
